<dcml>
<script>

async def onInit():
  print('home layout initialized ...')
  setUIValue('page', 'layout')

async def showPage(page):
  setUIValue('page', page)
  app.navigateTo(page)

async def showDialog(page):
  app.showDialog(page)

  </script>

  <template>
  <div class="h-100 w-100 overflow-auto d-flex flex-column">
    <app-header>
      <menu-items>
        <menu label="Grid 1" icon="fa fa-icon" click="showPage('simple-grid.dcml')" />
        <menu label="Chart Dialog 1" icon="fa fa-icon" click="showDialog('simple-chart.dcml')" />
        <menu label="Page 1" icon="fa fa-icon" click="showPage('simple-page-1.dcml')" />
        <menu label="Page 2 Dialog" icon="fa fa-icon" click="showDialog('simple-page-2.dcml')" />
        <menu label="Page 3" icon="fa fa-icon" click="showPage('simple-page-3.dcml')" />
      </menu-items>
    </app-header>
    <div class="container my-2 h-100 w-100 bg-main overflow-auto">
      <text text-style="h1" binding="$.page"/>

      <page-placeholder defaultPage="home"></page-placeholder>
    </div>
    <app-footer />
  </div>

  </template>
</dcml>
